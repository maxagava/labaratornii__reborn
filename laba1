#include <iostream>

using namespace std;

int main()
{
	cout  << "Tip dannix            size(in bytes)\t" << endl
		  << "Bool         --   \t" << sizeof(bool) << endl
		  << "Char         --   \t" << sizeof(char) << endl
		  << "Char16       --   \t" << sizeof(char16_t) << endl
		  << "Char32       --   \t" << sizeof(char32_t) << endl
		  << "Wchar        --   \t" << sizeof(wchar_t) << endl
		  << "Short        --   \t" << sizeof(short) << endl
		  << "Int          --   \t" << sizeof(int) << endl
		  << "Long         --   \t" << sizeof(long) << endl
		  << "Long long    --   \t" << sizeof(long long) << endl
	      << "Float        --   \t" << sizeof(float) << endl
		  << "Double       --   \t" << sizeof(double) << endl
		  << "Long double  --   \t" << sizeof(long double) << endl
	      << "nVoid        --   \t" << sizeof(void*) << endl
		  << "Nullptr      --   \t" << sizeof(nullptr_t) << endl;
	system("pause");
	return 0;
}
